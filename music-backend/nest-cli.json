{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.jpeg",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "**/*.jpg",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "**/*.webp",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "**/*.mp4",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "**/*.mkv",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "/modules/common/template/*.ejs",
        "watchAssets": true,
        "outDir": "dist/src"
      }
    ]
  }
}
